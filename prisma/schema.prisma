generator client {
  //provider = "prisma-client"
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- UTILISATEURS & AUTH ---

enum Role {
  USER
  ADMIN
  AGENT
}

model User {
  id            String    @id @default(cuid())
  phone         String    @unique
  password      String
  fullName      String?
  email         String?
  role          Role      @default(USER)
  points        Int       @default(0)
  createdAt     DateTime  @default(now())
  
  bookings      Booking[]
}

// --- FLOTTE & TRAJETS ---

model Bus {
  id            String    @id @default(cuid())
  name          String
  plateNumber   String    @unique
  capacity      Int       @default(50)
  type          String    // "VIP", "Standard"
  features      String[]
  createdAt     DateTime  @default(now())
  trips         Trip[]
}

model Route {
  id            String    @id @default(cuid())
  fromCity      String
  toCity        String
  distance      Int
  duration      String
  priceAdult    Int
  priceChild    Int
  image         String?
  details       Json?
  trips         Trip[]
}

model Trip {
  id            String    @id @default(cuid())
  date          DateTime
  arrivalDate   DateTime?
  status        TripStatus @default(SCHEDULED)
  
  busId         String
  bus           Bus       @relation(fields: [busId], references: [id])
  
  routeId       String
  route         Route     @relation(fields: [routeId], references: [id])
  
  bookings      Booking[]
}

enum TripStatus {
  SCHEDULED
  BOARDING
  ON_ROAD
  COMPLETED
  CANCELLED
}

// --- RÃ‰SERVATIONS ---

model Booking {
  id            String    @id @default(cuid())
  reference     String    @unique
  totalPrice    Int
  status        BookingStatus @default(PENDING)
  paymentMethod String?
  paymentId     String?
  
  createdAt     DateTime  @default(now())
  
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
  
  tripId        String
  trip          Trip      @relation(fields: [tripId], references: [id])
  
  passengers    Passenger[]
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
  USED
}

model Passenger {
  id            String    @id @default(cuid())
  fullName      String
  type          PassengerType
  seatNumber    Int
  
  bookingId     String
  booking       Booking   @relation(fields: [bookingId], references: [id])
}

enum PassengerType {
  ADULT
  CHILD
}

// --- BLOG ---

model Article {
  id            String    @id @default(cuid())
  slug          String    @unique
  title         String
  content       String
  image         String?
  category      String
  author        String
  publishedAt   DateTime  @default(now())
  isFeatured    Boolean   @default(false)
}
